<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="egovframework.com.equipment_code.mapper.EquipmentCodeMapper">

    <!--조회-->
    <select id="findAll" resultType="egovframework.com.equipment_code.vo.EquipmentCodeVO">
        SELECT ID, CODE, NAME
        FROM EQUIPMENT_CODE
    </select>

    <!--단건조회    -->
    <select id="findById" resultType="egovframework.com.equipment_code.vo.EquipmentCodeVO">
        SELECT ID, CODE, NAME
        FROM EQUIPMENT_CODE
        WHERE ID = #{id}
    </select>

    <!--등록    -->
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO EQUIPMENT_CODE(CODE, NAME)
        VALUES (#{equipmentCode.code}, #{equipmentCode.name})
    </insert>

    <!--    수정-->
    <update id="update" parameterType="egovframework.com.equipment_code.vo.EquipmentCodeVO">
        UPDATE EQUIPMENT_CODE
        SET CODE = #{equipmentCode.code},
            NAME = #{equipmentCode.name}
        WHERE ID = #{equipmentCode.id, jdbcType=BIGINT}
    </update>

    <!--    삭제-->
    <delete id="deleteById" parameterType="long">
        DELETE
        FROM EQUIPMENT_CODE
        WHERE ID = #{id,jdbcType=BIGINT}
    </delete>
<!--전체 삭제-->
    <delete id="deleteAll">
        DELETE
        FROM EQUIPMENT_CODE
    </delete>

</mapper>
